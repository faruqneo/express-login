{{#if errors}}
    {{#each errors}}
        <div class="alert alert-warning">
        <strong>Warning!</strong> {{msg}}.
        </div>
    {{/each}}
{{/if}}


<h2>Add Articles</h2>   
<form action="/newarticles" method="POST">
    <div class="form-group">
        <label for="title">Title:</label>
        <input type="text" class="form-control" name="title" placeholder="Enter title">
    </div>
    <div class="form-group">
        <label for="author">Author:</label>
        <input type="text" class="form-control" name="author" placeholder="Enter author">
    </div>
    <div class="form-group">
        <label for="body">Body:</label>
        <textarea class="form-control" rows="5" name="body" style="resize: none;" placeholder="Enter body"></textarea>
    </div>
  <button type="submit" class="btn btn-primary">Submit</button>
  <a href="/"><button type="button" class="btn btn-default">back</button></a>
</form>